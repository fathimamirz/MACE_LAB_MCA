<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="4"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_columnSpan="4"
        android:textSize="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"
        android:background="#D3D3D3"
        android:textAlignment="viewEnd"
        android:id="@+id/disp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="35sp"
        android:backgroundTint="#D3D3D3"
        android:text="7"
        android:textColor="#000000"
        android:id="@+id/b7"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="35sp"
        android:textColor="#000000"
        android:backgroundTint="#D3D3D3"
        android:text="8"
        android:id="@+id/b8"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="35sp"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:text="9"
        android:id="@+id/b9"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="35sp"
        android:backgroundTint="#0000FF"
        android:textColor="#000000"
        android:text="/"
        android:id="@+id/div"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_margin="5dp"
        android:text="4"
        android:id="@+id/b4"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_margin="5dp"
        android:text="5"
        android:id="@+id/b5"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_margin="5dp"
        android:text="6"
        android:id="@+id/b6"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:backgroundTint="#0000FF"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_margin="5dp"
        android:text="*"
        android:id="@+id/mul"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_margin="5dp"
        android:text="1"
        android:id="@+id/b1"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_margin="5dp"
        android:text="2"
        android:id="@+id/b2"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_margin="5dp"
        android:text="3"
        android:id="@+id/b3"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:backgroundTint="#0000FF"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_margin="5dp"
        android:text="-"
        android:id="@+id/sub"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:backgroundTint="#0000FF"
        android:layout_margin="5dp"
        android:textSize="35sp"
        android:text="AC"
        android:id="@+id/clr"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:backgroundTint="#D3D3D3"
        android:layout_margin="5dp"
        android:textSize="35sp"
        android:text="0"
        android:id="@+id/b0"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:backgroundTint="#0000FF"
        android:layout_margin="5dp"
        android:textSize="35sp"
        android:text="="
        android:id="@+id/eql"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:backgroundTint="#0000FF"
        android:layout_margin="5dp"
        android:textSize="35sp"
        android:text="+"
        android:id="@+id/add"/>


</GridLayout>
